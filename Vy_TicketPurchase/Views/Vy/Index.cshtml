<link href="~/Content/Styles/General.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/Generated/jquery-3.3.1.min.js"></script>
<script src="../../Scripts/Generated/jquery.validate.min.js"></script>
<script src="../../Scripts/Generated/jquery.validate.unobtrusive.min.js"></script>
<script src="../../Scripts/IndexScripts/RoutesDropdown.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div id="dropDown">
        <select id="routes">
        </select>
    </div>
    
    <p id="travelText">When do you want to travel?</p>
                                           
    <div id="timeDateButtonsContainer">
        <button class="leftEdgeElement" id="travelNowBtn">Now</button>
        <button class="centerElement" id="departureBtn">Departure</button>
        <button class="centerElement" id="arrivalBtn">Arrival</button>
    </div>
    
    <div id="datetimepickers">
        <input id="datePicker" type="date" name="travelDay">
        <input id="timePicker" type="time" name="travelTime">
    </div>
    
    <div id="confirmBtnContainer">
        <button class="leftEdgeElement" id="confirmBtn">Confirm</button>
    </div>
}


