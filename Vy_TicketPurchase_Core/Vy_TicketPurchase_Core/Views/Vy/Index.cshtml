@using Vy_TicketPurchase_Core.Controllers.Testing
@model  Vy_TicketPurchase_Core.Services.Tickets.Models.ServiceModelTicket

@{
    ViewBag.Title = "Index";
    Layout = "_Layout";
}

<h2>Index</h2>

@Html.AntiForgeryToken()

<form class="form-horizontal" method="post">
    <p id="travelText">Where do you want to travel?</p>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="from">Fra:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="from" placeholder="startsted">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="to">To:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="to" placeholder="stoppested">
        </div>
    </div>
    <div id="showInfo"></div>

    <p id="travelText">When do you want to travel?</p>
    <div class="form-group">
        <div id="datetimeContainer">
            <input id="datePicker" type="date" name="travelDay" asp-for="">
            <input id="timePicker" type="time" name="travelTime" asp-for="">
            <button class="centerElement" id="confirmBtn">Confirm</button>
        </div>
    </div>


    <div id="buttonContainer">
        <button class="leftEdgeElement" id="travelNowBtn">I want to travel now</button>
    </div>

    <p id="travelText">Who is traveling?</p>
    <div class="form-group">
        <label class="control-label col-sm-2" for="from">Fornavn:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="firstname" placeholder="Skriv inn et navn">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="from">Etternavn:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="lastname" placeholder="Skriv inn et navn">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="phonenumber">Phonenumber:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="phonenumber" placeholder="telefonNr">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Order" class="btn btn-default" />
        </div>
    </div>
</form>



<!-- THIS IS USED FOR NAVIGATING TO THE TESTING VIEW! DO NOT REMOVE! Move to a footer or something if it gets in the way of the design -->
