@{
    ViewBag.Title = "Index";
    Layout = "_Layout";
}

<h2>Index</h2>

@Html.AntiForgeryToken()

@using (Html.BeginForm())
{
    <p id="travelText">Where do you want to travel?</p>
    <form class="form-horizontal" action="/action_page.php">
        <div class="form-group">
            <label class="control-label col-sm-2" for="from">Fra:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="from" placeholder="startsted">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="to">To:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="to" placeholder="stoppested">
            </div>
        </div>
    </form>

    <!-- traveltime + price-->

    <div id="showInfo"></div>

    <p id="travelText">When do you want to travel?</p>

    <div id="datetimeContainer">
        <input id="datePicker" type="date" name="travelDay">
        <input id="timePicker" type="time" name="travelTime">
        <button class="centerElement" id="confirmBtn">Confirm</button>
    </div>

}
<!--<form method="post">-->

<div id="buttonContainer">
    <button class="leftEdgeElement" id="travelNowBtn">I want to travel now</button>
</div>

<p id="travelText">Who is traveling?</p>
<form class="form-horizontal" action="/action_page.php">
    <div class="form-group">
        <label class="control-label col-sm-2" for="from">Fornavn:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="firstname" placeholder="Skriv inn et navn">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="from">Etternavn:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="lastname" placeholder="Skriv inn et navn">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="phonenumber">Phonenumber:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="phonenumber" placeholder="telefonNr">
        </div>
    </div>
</form>

