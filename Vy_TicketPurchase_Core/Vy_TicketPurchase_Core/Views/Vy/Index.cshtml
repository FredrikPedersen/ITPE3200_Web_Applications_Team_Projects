@model Vy_TicketPurchase_Core.ViewModels.IndexModel

@{
    ViewBag.Title = "Bestill Billett";
    Layout = "_Layout";
}

@section scripts {
    <script src="~/js/index.js" type="text/javascript"></script>

}

<p class="h1 py-4">Bestill Billett</p>

<h4 id="same-station-err"></h4>

@using (Html.BeginForm("Index", "Vy", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr/>
        <div id="hide-div" class="hidden">
            <button type="button">X</button>
        </div>

        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Ticket.FromStation, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.ValidationMessageFor(m => m.Stations)
                @Html.EditorFor(model => model.Ticket.FromStation, new {htmlAttributes = new {@class = "form-control autocomplete", id = "from"}})
                @Html.ValidationMessageFor(model => model.Ticket.FromStation, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ticket.ToStation, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ticket.ToStation, new {htmlAttributes = new {@class = "form-control toautocomplete", id = "to"}})
                @Html.ValidationMessageFor(model => model.Ticket.ToStation, "", new {@class = "text-danger"})
            </div>
        </div>
        <div id="hidden-div" class="hidden">
            <div class="form-group">
                @Html.LabelFor(model => model.Ticket.ValidFromDate, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ticket.ValidFromDate, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Ticket.ValidFromDate, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ticket.ValidFromTime, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ticket.ValidFromTime, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Ticket.ValidFromTime, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ticket.CustomerGivenName, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ticket.CustomerGivenName, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Ticket.CustomerGivenName, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ticket.CustomerLastName, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ticket.CustomerLastName, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Ticket.CustomerLastName, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ticket.CustomerNumber, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ticket.CustomerNumber, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Ticket.CustomerNumber, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <!-- Label for "Reisende" -->
                <label class="control-label col-md-2">Reisende</label>
                <div id="dropDown" class="col-md-10">
                    <!-- Dropdown list for passenger type *AJAX call* -->
                    @Html.DropDownListFor(model => model.Ticket.PassengerType, (SelectList) ViewBag.PassengerTypes, new {@class = "form-control"})
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary" id="btn-submit">Bestill <span class="glyphicon glyphicon-ok"></span></button>
                </div>
            </div>
        </div>
        
        <div class="img-row">
            <div class="img-900-600">
                <img src="https://images.vy.no/kmd73tseuf/G%C3%B8teborg%20i%20solnedgang.jpg"/>
            </div>
            <div class="img-1488-992">
                <img src="https://images.vy.no/spcqk8yg35/Fjord.jpg"/>
            </div>
        </div>
    </div>
    <br/>
}
<div>
    <button>
        @Html.ActionLink("Admin Test", "ToAdmin", "Vy")
    </button>
</div>

<div>
    <button>
        @Html.ActionLink("Registrering", "Register", "Vy")
    </button>
</div>

@using (Html.BeginForm("LogInn", "Vy", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.User.UserName, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.UserName, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.UserName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.User.Password, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.Password, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.User.Password, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log inn" class="btn btn-success"/>
            </div>
        </div>
    </div>
    
}