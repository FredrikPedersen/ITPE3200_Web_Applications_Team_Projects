@model Vy_TicketPurchase_Core.Models.ViewModels.ListModel

@{
    ViewBag.Title = "List";
    Layout = "_Layout";
}

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Her kommer liste med billetter </title>
    </head>
    <body>
    
    <br/>
    
    
    @foreach (var ticket in Model.Tickets)
    {
        <div class="ticket">
            
            <div>
                <label>Fra: </label>
                @Html.DisplayFor(model => ticket.FromStation)

                <label>Til: </label>
                @Html.DisplayFor(model => ticket.ToStation) <br/>

                <label>Gyldig Fra: </label>
                @Html.DisplayFor(model => ticket.ValidFrom) <br/>

                <label>Navn: </label>
                @Html.DisplayFor(model => ticket.CustomerName) <br/>
                <label>Tlf Nummer: </label>
                @Html.DisplayFor(model => ticket.CustomerNumber)
            </div>
           
        </div>
        <br/>
    }
    
    </body>
</html>