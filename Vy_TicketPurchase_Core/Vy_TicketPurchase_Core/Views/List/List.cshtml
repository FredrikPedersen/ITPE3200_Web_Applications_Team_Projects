@model Vy_TicketPurchase_Core.Models.ViewModels.ListModel

@{
    ViewBag.Title = "Billettliste";
    Layout = "_Layout";
}

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
    
    <br/>
    
    
    @foreach (var ticket in Model.Tickets)
    {
        <div class="ticket">
            
            <div>
                <label>Reise: </label>
                @Html.DisplayFor(model => ticket.FromStation) - @Html.DisplayFor(model => ticket.ToStation) <br/>

                <label>Gyldig Fra: </label>
                @Html.DisplayFor(model => ticket.ValidFromDate) @Html.DisplayFor(model => ticket.ValidFromTime) <br/>
                
                <label>Pris: </label>
                @Html.DisplayFor(model => ticket.Price),- <br/>
                
                <label>Navn: </label>
                @Html.DisplayFor(model => ticket.CustomerName) <br/>
                
                <label>Tlf Nummer: </label>
                @Html.DisplayFor(model => ticket.CustomerNumber)
            </div>
           
        </div>
        <br/>
    }
    </body>
</html>